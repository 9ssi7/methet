---
import Header from "../components/Header.astro";

interface Props {
  title: string;
  class?: string;
}

const token = Astro.cookies.get("token");

const { title, class: className = "" } = Astro.props;
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Değer verdiğiniz insanları onore edin." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content="9ssi7" />
    <meta name="author" content="9ssi7" />
    <meta name="keywords" content="değer, saygı, meth, meth, et, kardeşim" />
    <meta name="theme-color" content="#090909" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="google" content="notranslate" />
    <meta name="og:title" content={title} />
    <meta
      name="og:description"
      content="Değer verdiğiniz insanları onore edin."
    />
    <meta name="og:type" content="website" />
    <meta name="og:url" content="https://methet.app" />
    <meta name="og:image" content="https://methet.app/logo.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@9ssi7" />
    <meta name="twitter:creator" content="@9ssi7" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Saygı ve değer verdiğiniz insanları onore edin."
    />
    <meta name="twitter:image" content="https://methet.app/logo.png" />
    <meta name="twitter:image:alt" content="Methet.app" />

    <title>{title}</title>
  </head>
  <body class="bg-first text-white h-full px-2 xl:px-0 pb-40">
    <Header isAuthenticated={!!token} />
    <main
      class={`max-w-3xl mx-auto lg:max-w-7xl h-full min-h-screen ${className}`}
    >
      <slot />
    </main>
    <footer class="text-center text-gray-500 mt-10">
      <p>
        © 2024 Tüm hakları saklıdır.
        <a
          href="https://github.com/9ssi7"
          target="_blank"
          rel="noopener noreferrer"
          class="text-emerald-800">9ssi7</a
        >
      </p>
    </footer>
    <style is:global>
      html {
        font-family: system-ui, sans-serif;
        background-color: #090909;
      }

      body {
        height: 100%;
        min-height: 100vh;
      }

      body,
      html {
        @apply selection:bg-teal-200 selection:text-teal-600 dark:selection:bg-teal-500 dark:selection:text-teal-200 selection:bg-opacity-20 dark:selection:bg-opacity-20;
      }
    </style>
  </body>
</html>
