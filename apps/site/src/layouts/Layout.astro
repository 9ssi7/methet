---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content="9ssi7" />
    <title>{title}</title>
  </head>
  <body class="bg-first text-white">
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background-color: #090909;
  }

  body {
    height: 100%;
    min-height: 100vh;
  }

  body,
  html {
    @apply selection:bg-teal-200 selection:text-teal-600 dark:selection:bg-teal-500 dark:selection:text-teal-200 selection:bg-opacity-20 dark:selection:bg-opacity-20;
  }
</style>
